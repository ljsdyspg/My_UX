<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/root_view"
    tools:context=".MainActivity">

    <!-- Widgets in top status bar -->
    <LinearLayout
        android:id="@+id/signal"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">

        <dji.ux.widget.PreFlightStatusWidget
            android:layout_width="322dp"
            android:layout_height="25dp"/>

        <dji.ux.widget.FlightModeWidget
            android:layout_width="103dp"
            android:layout_height="22dp"/>

        <dji.ux.widget.GPSSignalWidget
            android:layout_width="44dp"
            android:layout_height="match_parent" />

        <dji.ux.widget.VisionWidget
            android:layout_width="22dp"
            android:layout_height="match_parent"/>

        <dji.ux.widget.RemoteControlSignalWidget
            android:layout_width="38dp"
            android:layout_height="match_parent"/>

        <dji.ux.widget.VideoSignalWidget
            android:layout_width="38dp"
            android:layout_height="match_parent"/>

        <dji.ux.widget.WiFiSignalWidget
            android:layout_width="32dp"
            android:layout_height="match_parent"/>

        <dji.ux.widget.BatteryWidget
            android:layout_width="96dp"
            android:layout_height="25dp"
            custom:excludeView="singleVoltage"/>

        <dji.ux.widget.ConnectionWidget
            android:id="@+id/ConnectionWidget"
            android:layout_width="25dp"
            android:layout_height="25dp" />
    </LinearLayout>

    <dji.ux.widget.RemainingFlightTimeWidget
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:id="@+id/remaining_flight_time"
        android:background="@color/transparent"
        android:layout_height="20dp"/>

    <LinearLayout
        android:id="@+id/two_view"
        android:layout_below="@+id/signal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <!-- Widget to see first person view (FPV) -->
            <dji.ux.widget.FPVWidget
                android:id="@+id/fpv_widget"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                custom:sourceCameraNameVisibility="true"/>

            <dji.ux.widget.FPVOverlayWidget
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>
        <LinearLayout
            android:paddingTop="15dp"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <com.amap.api.maps2d.MapView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>

        <ScrollView
            android:layout_weight="1"
            android:paddingTop="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_locate"
                    android:text="定位"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>
                <Button
                    android:id="@+id/btn_config"
                    android:text="配置任务"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>
                <Button
                    android:id="@+id/btn_start"
                    android:text="开始"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>
                <Button
                    android:id="@+id/btn_stop"
                    android:text="停止"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>
                <Button
                    android:id="@+id/btn_pause"
                    android:text="暂停"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>
                <Button
                    android:id="@+id/btn_resume"
                    android:text="继续"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>

                <Button
                    android:id="@+id/btn_reset"
                    android:text="重置"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>
                <Button
                    android:id="@+id/btn_test"
                    android:text="TEST"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>
                <Button
                    android:id="@+id/btn_test2"
                    android:text="TEST2"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

<!--

    <dji.ux.workflow.CompassCalibratingWorkFlow
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
-->

    <LinearLayout
        android:id="@+id/dashboard_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal"
        android:padding="12dp">

        <dji.ux.widget.dashboard.DashboardWidget
            android:id="@+id/Compass"
            android:layout_width="405dp"
            android:layout_height="91dp"
            android:layout_marginRight="12dp"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>


    <!-- Pre-flight checklist panel -->
  <!--  <dji.ux.panel.PreFlightCheckListPanel
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/signal"
        custom:excludeItem="ESCStatus"
        android:visibility="gone"/>
-->


</RelativeLayout>
